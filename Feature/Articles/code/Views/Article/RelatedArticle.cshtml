@using Sitecore.Feature.Articles
@model IEnumerable<Sitecore.Data.Items.Item>

<div class="wrapper row3">
    <section id="services" class="hoc container clear">
        <div class="center btmspace-80">
            <h6 class="heading underline font-x2">Related Articles</h6>
        </div>
        <ul class="nospace group">
            @foreach (var item in Model)
            {
                <li class="one_third">
                    <article>
                        <h4 class="heading">@item.Fields[Constants.Fields.Title]</h4>
                        <h6>@Html.Sitecore().Field(Constants.Fields.PublishDate, item, new { format = "MMM\ndd,yyyy" })</h6>
                        <p>@item.Fields[Constants.Fields.Summary]</p>
                        <footer><a href=@Sitecore.Links.LinkManager.GetItemUrl(item)><i class="fas fa-arrow-right"></i></a></footer>
                    </article>
                </li>
            }
            </ul>
    </section>
</div>